{
  "name": "luma-api",
  "version": "1.0.0",
  "description": "Backend API for Luma - Stripe-integrated POS system for mobile bars and events",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest --coverage",
    "db:migrate": "node dist/db/migrate.js",
    "db:seed": "node dist/db/seed.js",
    "build:dev": "npm run build && docker buildx build --platform linux/amd64,linux/arm64 --label version=latest -t ghcr.io/ctrl-luma/luma-api:dev --push .",
    "build:prod": "npm run build && docker buildx build --platform linux/amd64,linux/arm64 --label version=latest -t ghcr.io/ctrl-luma/luma-api:latest --push ."
  },
  "keywords": ["pos", "stripe", "mobile", "events"],
  "author": "Luma",
  "license": "UNLICENSED",
  "dependencies": {
    "hono": "^4.6.14",
    "@hono/node-server": "^1.13.8",
    "@hono/swagger-ui": "^0.4.1",
    "@hono/zod-openapi": "^0.18.3",
    "stripe": "^19.3.1",
    "pg": "^8.16.3",
    "redis": "^4.7.0",
    "bullmq": "^5.63.1",
    "socket.io": "^4.8.1",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "zod": "^3.24.1",
    "dotenv": "^16.4.7",
    "winston": "^3.18.3",
    "uuid": "^11.0.5",
    "dayjs": "^1.11.19",
    "@aws-sdk/client-cognito-identity-provider": "^3.721.0",
    "aws-jwt-verify": "^4.0.1",
    "@aws-sdk/client-sts": "^3.721.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/pg": "^8.11.10",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.7.3",
    "tsx": "^4.19.2",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "eslint": "^9.17.0",
    "vitest": "^2.1.3",
    "@vitest/coverage-v8": "^2.1.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}